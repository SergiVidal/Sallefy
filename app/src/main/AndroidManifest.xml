<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vidal.sergi.sallefyv1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name=" android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".controller.activity.UserDetailsActivity"></activity>
        <activity android:name=".controller.activity.TrackLibraryActivity" />
        <activity android:name=".controller.activity.TrackOptionsActivity" />

        <service
            android:name=".controller.music.MusicService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".controller.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.activity.MainActivity" />
        <activity android:name=".controller.activity.ListActivity" />
        <activity android:name=".controller.activity.AdvancedListActivity" />
        <activity android:name=".controller.activity.RegisterActivity" />
        <activity android:name=".controller.activity.CreatePlaylistActivity" />
        <activity android:name=".controller.activity.AddTrackActivity" />
        <activity android:name=".controller.activity.DisplayPlaylistTracksActivity" />
        <activity android:name=".controller.activity.ProfileActivity" />
        <activity android:name=".controller.activity.LibraryActivity" />
        <activity android:name=".controller.activity.SearchActivity" />
        <activity android:name=".controller.activity.PlaylistDetailsActivity" />
        <activity android:name=".controller.activity.PlaySongActivity" />
    </application>

</manifest>